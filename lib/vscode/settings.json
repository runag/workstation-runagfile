{
  "editor.acceptSuggestionOnEnter": "off",
  "editor.accessibilitySupport": "off",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.cursorSurroundingLines": 2,
  "editor.detectIndentation": false,
  "editor.fastScrollSensitivity": 4,
  "editor.fontFamily": "'DejaVu Sans Mono', 'Liberation Mono', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 17,
  "editor.lineHeight": 1.5,
  "editor.minimap.enabled": false,
  "editor.mouseWheelScrollSensitivity": 3,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.rulers": [ 80, 100, 120 ],
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "elixirLS.suggestSpecs": false, // this turns off suggestions
  "explorer.autoReveal": true,
  "explorer.confirmUndo": "verbose",
  "files.associations": { "*.plist": "xml" },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "html.autoClosingTags": false,
  "markdown.preview.fontSize": 16,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.2,
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Default Light Modern",
  "workbench.list.mouseWheelScrollSensitivity": 2,
  "workbench.list.smoothScrolling": true,
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 25,
  // "editor.hover.enabled": false, // this turns off suggestions
  // "editor.inlineSuggest.enabled": false, // this turns off suggestions
  // "editor.parameterHints.enabled": false, // this turns off suggestions
  // "editor.quickSuggestions": { "comments": "off", "strings": "off", "other": "off" }, // this turns off suggestions
  // "editor.suggestOnTriggerCharacters": false, // this turns off suggestions
  // "editor.wordBasedSuggestions": "off", // this turns off suggestions
}
