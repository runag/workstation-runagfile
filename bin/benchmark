set -o nounset && if ! command -v sysbench >/dev/null; then sudo apt install -y sysbench || { echo "Unable to install sysbench" >&2; exit 1; } ; fi && \
(cd ~ && \
\
echo "### CPU ###" && \
sysbench cpu run && \
\
echo "### RAM ###" && \
sysbench memory run --memory-block-size=4096 && \
\
echo "### THREADS ###" && \
sysbench threads run && \
\
sysbench fileio prepare && \
\
echo "### SEQUENTIAL READ ###" && \
sysbench fileio run --file-test-mode=seqrd --file-block-size=4096 --file-fsync-freq=0 --file-fsync-end=off && \
\
echo "### RANDOM READ ###" && \
sysbench fileio run --file-test-mode=rndrd --file-block-size=4096 --file-fsync-freq=0 --file-fsync-end=off && \
\
echo "### RANDOM READ QD32 ###" && \
sysbench fileio run --file-test-mode=rndrd --file-block-size=4096 --file-fsync-freq=0 --file-fsync-end=off --file-io-mode=async --file-async-backlog=32 && \
\
echo "### SEQUENTIAL WRITE FSYNC EVERY 100 REQ ###" && \
sysbench fileio run --file-test-mode=seqwr --file-block-size=4096 && \
\
echo "### RANDOM WRITE FSYNC EVERY 100 REQ ###" && \
sysbench fileio run --file-test-mode=rndwr --file-block-size=4096 && \
\
echo "### SEQUENTIAL WRITE NOSYNC ###" && \
sysbench fileio run --file-test-mode=seqwr --file-block-size=4096 --file-fsync-freq=0 --file-fsync-end=on && \
\
echo "### RANDOM WRITE NOSYNC ###" && \
sysbench fileio run --file-test-mode=rndwr --file-block-size=4096 --file-fsync-freq=0 --file-fsync-end=on && \
\
echo "### RANDOM WRITE NOSYNC QD32 ###" && \
sysbench fileio run --file-test-mode=rndwr --file-block-size=4096 --file-fsync-freq=0 --file-fsync-end=on --file-io-mode=async --file-async-backlog=32 && \
\
sysbench fileio cleanup \
\
) | tee "${HOME}/$(hostname) $(date +"%Y-%m-%d %H-%M-%S") - benchmark.txt"
